#include<bits/stdc++.h>
using namespace  std;
int main ()
{
     int n,test;
    cin>>n>>test;
    priority_queue<int> q[n];
      
      for(int i = 0; i<test; i++){
        int type,t;
         cin>>type>>t;
         
          if(type==0){
            int num;
            cin>>num;
            q[t].push(num);
          }

           else if(type==1){
                if(q[t].size()>0){
                    cout<<q[t].top()<<"\n";
                }

           }

          else if(type==2){
            if(q[t].size()>0){
                q[t].pop();
            }
          }
            return 0; 
 
      }

}


