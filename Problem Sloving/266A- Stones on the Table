#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n , cnt = 0;
    string stone Colour;
    cin>> stone  Colour;

    for(int i = 0 ; i<n-1 ; i++)
    {

      if(stone Colour[i] == stone Colour [i + 1])
      {
           cnt++;

      }
 
   }
       
       cout << cnt << endl;
       return 0;



}
